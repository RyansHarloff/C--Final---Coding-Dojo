@model Game
<Partial name = "_NavBarPartial2"/>
<h1>Create An Activity</h1>
<form action="AddGameToDb" method = "Post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for = "Title" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Duration">Duration</label>
        <input asp-for="Duration" class="form-control">
        <span asp-validation-for = "Duration" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Time">Duration Amount</label>
        <select asp-for="Time" class ="form-control">
            <option>Minutes</option>
            <option>Hours</option>
            <option>Days</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Date">Date/TIme</label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for = "Date" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Decription">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for = "Description" class = "text text-danger"></span>
    </div>
    <button type="submit" value = "register" class="btn btn-primary">Create Game</button>
</form>